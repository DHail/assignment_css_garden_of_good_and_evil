<div class="navbar navbar-default">
    <div class="container">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search" method="post" action="/settings">

          <div class="form-group">
          	{{#if (valuesEqual attitude 'good')}}
	            <div class="radio">
	              <label>
	                <input type="radio" name="attitude" id="good" value="good" checked>
	                Good
	              </label>
	            </div>
	            <div class="radio">
	              <label>
	                <input type="radio" name="attitude" id="evil" value="evil">
	                Evil
	              </label>
	            </div>
	        {{else}}
	            <div class="radio">
	              <label>
	                <input type="radio" name="attitude" id="good" value="good">
	                Good
	              </label>
	            </div>
	            <div class="radio">
	              <label>
	                <input type="radio" name="attitude" id="evil" value="evil" checked>
	                Evil
	              </label>
	            </div>
	        {{/if}}        
          </div>
          <div class="form-group">
            <input name="food" type="text" class="form-control" placeholder="Favorite Food" value="{{food}}">
          </div>
          <div class="form-group">
	          <select name="color" class="form-control">
	              <option {{#if (valuesEqual color 'Blue')}} selected {{/if}}>Blue</option>
	              <option {{#if (valuesEqual color 'Red')}} selected {{/if}}>Red</option>
	              <option {{#if (valuesEqual color 'Green')}} selected {{/if}}>Green</option>
	              <option {{#if (valuesEqual color 'Yellow')}} selected {{/if}}>Yellow</option>
	              <option {{#if (valuesEqual color 'Purple')}} selected {{/if}}>Purple</option>
	          </select>	        
          </div>
          <div class="form-group">
            <label for="insanity">Insanity</label>
            <input name="insanity" id="insanity" type="range" value="{{insanity}}" min="1" max="5" step="1" />
          </div>
          
          <button type="submit" class="btn btn-default">Submit</button>
          <p id="inline">You've visited the page <span>{{views}}</span> times!</p>
        </form>
      </div>
    </div>
  </div>


<div class="container">
  {{#if (valuesEqual attitude 'good')}}
	{{>good color=color food=food random=randomIn}}
  {{else}}
  	{{>evil color=color food=food random=randomIn}}
  {{/if}}



</div>